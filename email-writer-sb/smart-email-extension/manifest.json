{
  "manifest_version": 3,
  "name": "Gmail AI Reply",
  "version": "1.0",
  "description": "Inject AI Reply button into Gmail",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:8080/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Gmail AI Reply"
  }
}
